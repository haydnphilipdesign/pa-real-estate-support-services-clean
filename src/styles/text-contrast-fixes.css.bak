/* ===== SPECIFIC SECTION FIXES ===== */

/* Feature cards text contrast */
.feature-card h3 {
  color: #0066CC !important; /* Brand blue - good contrast on white/light backgrounds */
}

.feature-card p {
  color: #374151 !important; /* Gray-700 */
}

/* Statistics section text contrast */
.statistics-section h3,
.statistics-number,
.stat-number {
  color: #0066CC !important; /* Brand blue */
  font-weight: 700;
}

.statistics-section p,
.statistics-label,
.stat-label {
  color: #4B5563 !important; /* Gray-600 */
}

/* Footer text contrast - ensure good readability */
footer h3,
footer h4 {
  color: #F9FAFB !important; /* Gray-50 - very light to contrast with dark footer */
}

footer p,
footer a:not(.btn) {
  color: #9CA3AF !important; /* Gray-400 - good contrast on dark backgrounds */
}

footer a:not(.btn):hover {
  color: #F3F4F6 !important; /* Gray-100 - much lighter on hover */
  text-decoration: underline;
}

/* Fix for footer bottom text */
footer .text-xs {
  color: #6B7280 !important; /* Gray-500 - still readable on very dark backgrounds */
}

/* ===== GLASS CARD TEXT CONTRAST FIXES ===== */

/* White glass cards */
.glass-card-white h3,
.glass-card-frost h3 {
  color: #0066CC !important; /* Brand blue */
}

.glass-card-white p,
.glass-card-frost p {
  color: #374151 !important; /* Gray-700 */
}

/* Navy glass cards */
.glass-card-navy h3,
.glass-card-navy h2 {
  color: #FFFFFF !important; /* White */
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3) !important;
}

.glass-card-navy p {
  color: #EFF6FF !important; /* Very light blue/white */
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2) !important;
}

/* Blue glass cards */
.glass-card-blue h3 {
  color: #FFFFFF !important; /* White */
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3) !important;
}

.glass-card-blue p {
  color: #EFF6FF !important; /* Very light blue */
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2) !important;
}

/* Gold glass cards - must use dark text */
.glass-card-gold h3 {
  color: #0F1C2E !important; /* Brand navy */
}

.glass-card-gold p {
  color: #1E293B !important; /* Slightly lighter navy but still very good contrast */
}

/* ===== TAG/BADGE TEXT CONTRAST FIXES ===== */

/* Light badges should use dark text */
.badge-light,
.bg-gray-100.badge,
.bg-blue-100.badge,
.bg-amber-100.badge,
.bg-yellow-100.badge {
  color: #1E293B !important; /* Dark slate text */
}

/* Dark badges should use light text */
.badge-dark,
.bg-gray-800.badge,
.bg-blue-800.badge,
.bg-brand-blue.badge,
.bg-brand-navy.badge {
  color: #FFFFFF !important; /* White text */
}

/* Gold badges should use dark text */
.badge-gold,
.bg-brand-gold.badge,
.bg-amber-400.badge,
.bg-yellow-400.badge {
  color: #0F1C2E !important; /* Brand navy - dark text */
}

/* ===== LINK TEXT CONTRAST ===== */

/* Default links on light backgrounds */
a:not(.btn) {
  color: #0066CC !important; /* Brand blue - good contrast on white/light backgrounds */
}

a:not(.btn):hover {
  color: #0F1C2E !important; /* Brand navy - darker on hover for better differentiation */
  text-decoration: underline;
}

/* Links on dark backgrounds */
.bg-brand-blue a:not(.btn),
.bg-brand-navy a:not(.btn),
.bg-blue-600 a:not(.btn),
.bg-blue-700 a:not(.btn),
.bg-blue-800 a:not(.btn),
.bg-blue-900 a:not(.btn),
.bg-gray-700 a:not(.btn),
.bg-gray-800 a:not(.btn),
.bg-gray-900 a:not(.btn),
.bg-black a:not(.btn) {
  color: #90CAF9 !important; /* Light blue for links on dark backgrounds */
}

.bg-brand-blue a:not(.btn):hover,
.bg-brand-navy a:not(.btn):hover,
.bg-blue-600 a:not(.btn):hover,
.bg-blue-700 a:not(.btn):hover,
.bg-blue-800 a:not(.btn):hover,
.bg-blue-900 a:not(.btn):hover,
.bg-gray-700 a:not(.btn):hover,
.bg-gray-800 a:not(.btn):hover,
.bg-gray-900 a:not(.btn):hover,
.bg-black a:not(.btn):hover {
  color: #FFFFFF !important; /* White on hover for differentiation */
  text-decoration: underline;
}

/* Fix for contact information links and text */
.contact-info a,
.contact-info p {
  color: #FFFFFF !important; /* White text for contact info on dark backgrounds */
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2) !important;
}

.contact-form label {
  color: #374151 !important; /* Gray-700 for form labels */
}

/* ===== BUTTON TEXT CONTRAST FIXES ===== */

/* Primary button (blue with white text) */
.btn-primary {
  background-color: #0066CC !important; /* Brand blue */
  color: #FFFFFF !important; /* White text */
}

.btn-primary:hover {
  background-color: #004C99 !important; /* Darker blue */
  color: #FFFFFF !important; /* White text */
}

/* Secondary button (gold with navy text) */
.btn-secondary {
  background-color: #FFB81C !important; /* Brand gold */
  color: #0F1C2E !important; /* Brand navy - dark text on gold for better contrast */
}

.btn-secondary:hover {
  background-color: #F0D28C !important; /* Lighter gold */
  color: #0F1C2E !important; /* Navy text */
}

/* ===== SPECIAL CASE FIXES ===== */

/* Fix for any remaining gold text on light backgrounds (which would be low contrast) */
.text-brand-gold,
.text-amber-400,
.text-yellow-400 {
  color: #0F1C2E !important; /* Override with dark navy instead of gold on light backgrounds */
}

/* Only use gold text on dark backgrounds where it has good contrast */
.bg-brand-navy .text-brand-gold,
.bg-brand-blue .text-brand-gold,
.bg-blue-900 .text-brand-gold,
.bg-blue-800 .text-brand-gold,
.bg-gray-900 .text-brand-gold,
.bg-gray-800 .text-brand-gold,
.bg-black .text-brand-gold {
  color: #FFB81C !important; /* Gold text is OK here on dark backgrounds */
}

/* Fix for taglines and special text elements */
.tagline,
.header-tagline,
.brand-blue-bg-text {
  color: #FFFFFF !important; /* White text */
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.4) !important;
  font-weight: 500 !important;
}
