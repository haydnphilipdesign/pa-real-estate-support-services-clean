/* Main CSS Entry Point - Consolidated May 2025 */

/* Step 1: Core Tailwind directives */
@tailwind base;
@tailwind components;

/* Step 2: Base styles (these augment Tailwind's base layer) */
@import './base/variables.css';
@import './base/reset.css';
@import './base/typography.css';
@import './base/animations.css';
@import './base/utilities.css';

/* Step 3: Layout styles */
@import './layouts/containers.css';
@import './layouts/grid.css';
@import './layouts/responsive.css';
@import './layouts/header.css';
@import './layouts/footer.css';
@import './layouts/sidebar.css';
@import './layouts/flex.css';

/* Step 4: Component styles */
@import './components/buttons.css';
@import './components/cards.css';
@import './components/forms.css';
@import './components/navigation.css';
@import './components/enhanced-glass-cards.css';
@import './components/modals.css';
@import './components/alerts.css';
@import './components/navbars.css';
@import './components/heroes.css';
@import './components/testimonials.css';

/* Step 5: Page-specific styles */
@import './pages/home.css';
@import './pages/about.css';
@import './pages/services.css';
@import './pages/contact.css';
@import './pages/login.css';
@import './pages/dashboard.css';

/* Step 6: Utility styles and fixes - imported LAST to override other styles */
@import './utils/fixes.css';
@import './utils/helpers.css';
@import './utils/accessibility.css';

/* Step 7: Tailwind utilities - these should always come last */
@tailwind utilities;