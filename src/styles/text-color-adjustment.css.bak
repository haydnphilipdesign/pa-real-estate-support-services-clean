/**
 * Text Color Adjustment for better readability
 * This file provides specific adjustments to text colors to ensure optimal contrast
 * while maintaining the brand guidelines.
 */

/* Base text color adjustments for better readability */
p, span, li {
  /* Slightly darker than the current gray-700 (rgb(55 65 81)) */
  /* Use a better blue-black tone for readability that's still not pure black */
  color: #1f2937 !important; /* gray-800 - darker and more readable */
}

/* Specific context overrides - maintain proper contrast in special cases */

/* Dark backgrounds need light text */
.bg-brand-blue p,
.bg-brand-navy p,
.bg-blue-600 p,
.bg-blue-700 p,
.bg-blue-800 p,
.bg-blue-900 p,
.bg-gray-600 p,
.bg-gray-700 p,
.bg-gray-800 p,
.bg-gray-900 p,
.bg-black p,
.glass-card-navy p,
.glass-card-blue p,
.glass-card-dark p,
.glass-card-light p,
[class*="glass-card-navy"] p,
[class*="glass-card-blue"] p,
[class*="glass-card-dark"] p {
  color: white !important;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
}

/* Footer text needs to maintain current styling */
footer p {
  color: #e5e7eb !important; /* gray-200 for footer's dark background */
}

/* Hero section paragraphs need proper contrast */
[data-hero-component="true"] p,
.hero-section p {
  color: #f9fafb !important; /* gray-50 - very light for dark hero backgrounds */
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3) !important;
}

/* When we have brand colored backgrounds */
.bg-brand-gold p, 
.bg-amber-400 p, 
.bg-amber-500 p,
.bg-yellow-400 p,
.glass-card-gold p {
  color: #0F1C2E !important; /* Brand navy - for better contrast on gold */
}

/* Add specific context for the home services paragraph that appears on the homepage */
.services-highlights p,
.feature-card p,
.service-card p {
  color: #1f2937 !important; /* gray-800 - darker and more readable */
}

/* Form labels need to be a bit darker too */
label {
  color: #1f2937 !important; /* gray-800 */
}
