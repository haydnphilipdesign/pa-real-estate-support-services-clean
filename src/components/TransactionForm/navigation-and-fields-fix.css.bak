/* Fix for the light background at the top behind navigation - May 2025 */

/* Fix the light background behind the navigation */
.transaction-form-page body {
  background-color: #1a202c !important; /* Dark background for transaction form pages only */
}

/* Make sure the hero section is transparent */
section[data-hero-component="true"] {
  background-color: transparent !important;
}

/* Fix the top navigation bar background */
header,
nav,
.fixed.top-0.left-0.right-0.z-50 {
  background-color: #1a202c !important; /* Match body background */
  backdrop-filter: none !important;
  -webkit-backdrop-filter: none !important;
}

/* Fix the header container */
.container.mx-auto.px-4 {
  background-color: transparent !important;
}

/* Fix all parent containers */
.app-root,
.relative.min-h-screen.flex.flex-col,
.flex-grow,
main,
.overflow-x-hidden {
  background-color: transparent !important;
}

/* Make sure the form has the right blue color */
.glass-card-navy {
  background-color: rgba(30, 58, 138, 0.95) !important;
  backdrop-filter: blur(12px) !important;
  -webkit-backdrop-filter: blur(12px) !important;
}

/* Ensure form fields have solid white backgrounds - SCOPED TO TRANSACTION FORM */
.transaction-form input,
.transaction-form select,
.transaction-form textarea,
.glass-card-navy input,
.glass-card-navy select,
.glass-card-navy textarea {
  background-color: white !important;
  color: #1e3a8a !important;
  border: 1px solid rgba(59, 130, 246, 0.3) !important;
  opacity: 1 !important;
}

/* Fix role selection options */
.role-selection-button {
  background-color: white !important;
  border: 1px solid rgba(59, 130, 246, 0.3) !important;
  border-radius: 0.5rem !important;
  padding: 1rem !important;
  margin-bottom: 0.75rem !important;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1) !important;
  transition: all 0.2s ease-in-out !important;
}

.role-selection-button:hover {
  transform: translateY(-2px) !important;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15) !important;
  border-color: rgba(59, 130, 246, 0.5) !important;
}

.role-selection-button.selected {
  background-color: rgba(59, 130, 246, 0.1) !important;
  border-color: rgba(59, 130, 246, 0.8) !important;
}

/* Fix radio buttons in role selection */
[role="radiogroup"] [role="radio"] {
  background-color: white !important;
  border-color: rgba(59, 130, 246, 0.5) !important;
}

/* Fix text in role selection */
[role="radiogroup"] label,
[role="radiogroup"] p {
  color: #1e3a8a !important;
  opacity: 1 !important;
}

/* Fix dropdown menus */
[role="listbox"],
[data-radix-select-viewport] {
  background-color: white !important;
  color: #1e3a8a !important;
  border: 1px solid rgba(59, 130, 246, 0.3) !important;
  opacity: 1 !important;
}

/* Fix the role info box */
.lg\:col-span-9 .bg-blue-700 .rounded-lg {
  background-color: rgba(30, 58, 138, 0.8) !important;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1) !important;
}
