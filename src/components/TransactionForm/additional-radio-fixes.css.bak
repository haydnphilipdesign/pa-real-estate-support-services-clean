/* Fix role selection item containers specifically */
.transaction-form-container div[class*="rounded-lg bg-white"] {
  background-color: white !important;
  opacity: 1 !important;
}

/* Fix all radio-related containers */
.transaction-form-container [role="radiogroup"] > div,
.transaction-form-container [role="radiogroup"] button,
.transaction-form-container [role="radiogroup"] label {
  background-color: white !important;
  color: #1e3a8a !important;
  opacity: 1 !important;
  backdrop-filter: none !important;
  -webkit-backdrop-filter: none !important;
}

/* Target role selection specifically */
.transaction-form-container [id^="role-"] + div,
.transaction-form-container [id^="role-"] + label {
  color: #1e3a8a !important;
}
