/* Portal Columns Fix - May 2025 */

/* Fix left column */
.lg\:col-span-3 .bg-gray-900 {
  background-color: #1a202c !important; /* Dark gray for left side */
  color: white !important;
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
}

/* Fix right column */
.lg\:col-span-9 .bg-blue-700 {
  background-color: rgba(30, 58, 138, 0.95) !important; /* Bring back blue glass effect */
  border: 1px solid rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
}

/* Fix "Need Help?" box in left column */
.lg\:col-span-3 .bg-blue-900 {
  background-color: #1e3a8a !important; /* Darker blue for help box */
  border: 1px solid rgba(255, 255, 255, 0.1);
}

/* Make sure grid container takes full height */
.grid.grid-cols-1.lg\:grid-cols-12 {
  min-height: calc(100vh - 80px);
}

/* Remove background from the hero section */
section[data-hero-component="true"] {
  background-color: transparent !important;
}

/* Set body background */
body {
  background-color: #f3f4f6 !important; /* Light gray background */
}

/* Fix content overflow in right column */
.lg\:col-span-9 .bg-blue-700 {
  max-height: calc(100vh - 100px); /* Account for navigation and margins */
  overflow-y: auto;
  margin-bottom: 2rem;
}

/* Fix wizard container */
.wizard-container {
  background-color: #1e40af !important; /* Solid blue background */
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}
