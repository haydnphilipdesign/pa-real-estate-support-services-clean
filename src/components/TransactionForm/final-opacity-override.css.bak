/* Last-resort fix for role selection buttons */

/* Target all nested divs inside role selections */
.transaction-form-container [role="radiogroup"] div {
  background-color: white !important;
  color: #1e3a8a !important;
}

/* Target all labels inside role selections */
.transaction-form-container [role="radiogroup"] label {
  background-color: transparent !important;
  color: #1e3a8a !important;
}

/* Target paragraphs inside role selections */
.transaction-form-container [role="radiogroup"] p {
  color: #1e3a8a !important;
}

/* Target containers in role selection */
.transaction-form-container [role="radiogroup"] > div {
  background-color: white !important;
  backdrop-filter: none !important;
  -webkit-backdrop-filter: none !important;
  opacity: 1 !important;
}

/* Ensure form fields are solid in all contexts */
.transaction-form-container input, 
.transaction-form-container select, 
.transaction-form-container textarea {
  background-color: white !important;
  backdrop-filter: none !important;
  -webkit-backdrop-filter: none !important;
  opacity: 1 !important;
}

/* Make sure the blue card doesn't have any translucent effects */
.glass-card-navy, .glass-card {
  background-color: rgba(30, 58, 138, 0.95) !important;
  backdrop-filter: blur(12px) !important;
  -webkit-backdrop-filter: blur(12px) !important;
  border: 1px solid rgba(255, 255, 255, 0.15) !important;
}

/* Ensure blue background stays solid but ONLY for the right side */
section[data-hero-component="true"] {
  background-color: transparent !important; /* Remove the solid blue background */
}

/* Handle wizard container */
.wizard-container {
  background-color: rgb(30, 64, 175) !important;
  backdrop-filter: none !important;
  -webkit-backdrop-filter: none !important;
}

/* Ensure the form container has no transparency */
.modern-form-container {
  background-color: transparent !important;
  backdrop-filter: none !important;
  -webkit-backdrop-filter: none !important;
}

/* Final override for radio groups buttons */
.transaction-form-container [role="radio"] {
  opacity: 1 !important;
  background-color: white !important;
}
