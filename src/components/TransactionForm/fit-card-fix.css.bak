/* Fix TransactionForm sizing to fit within card - May 2025 */

/* Make sure form fits within card without scrollbars */
.transaction-form-container {
  padding: 0 !important;
  margin: 0 !important;
}

/* Remove unnecessary margins */
.modern-form-container {
  margin-bottom: 0 !important;
  max-height: none !important;
  overflow-y: visible !important;
}

/* Restore blue glass appearance */
.glass-card-navy {
  background-color: rgba(30, 58, 138, 0.95) !important;
  backdrop-filter: blur(12px) !important;
  -webkit-backdrop-filter: blur(12px) !important;
  border: 1px solid rgba(255, 255, 255, 0.15) !important;
}

/* Fix container height to avoid scrollbars */
.container.mx-auto.px-2.sm\:px-4.py-2.sm\:py-4 {
  padding-top: 0 !important;
  padding-bottom: 0 !important;
}

/* Fix height of main form container */
.lg\:col-span-9 .glass-card-navy {
  max-height: calc(100vh - 100px) !important;
  padding-top: 0 !important;
  padding-bottom: 0 !important;
}

/* Fix overflow on inner containers */
.transaction-form-container .modern-form-container {
  border: none !important;
  box-shadow: none !important;
  max-height: none !important;
  overflow: visible !important;
}

/* Reduce size of the footer area */
.transaction-form-container .text-center.mt-6 {
  margin-top: 1rem !important;
  padding-top: 0.5rem !important;
}

/* Fix padding on form actions bar */
.transaction-form-container .flex.flex-wrap.justify-between.items-center {
  padding-top: 0.5rem !important;
}
