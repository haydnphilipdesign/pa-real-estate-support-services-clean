{
    "version": 2,
    "buildCommand": "npm run build:vercel",
    "functions": {
        "api/generateCoverSheet.js": {
            "memory": 1024,
            "maxDuration": 60
        },
        "pages/api/update-airtable-attachment.js": {
            "memory": 1024,
            "maxDuration": 60
        },
        "pages/api/supabase-pdf-upload.js": {
            "memory": 1024,
            "maxDuration": 60
        }
    },
    "headers": [{
            "source": "/(.*)\\.js",
            "headers": [{
                    "key": "Content-Type",
                    "value": "application/javascript"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "Cache-Control",
                    "value": "no-cache, no-store, must-revalidate"
                }
            ]
        },
        {
            "source": "/index.html",
            "headers": [{
                "key": "Cache-Control",
                "value": "no-cache, no-store, must-revalidate"
            }]
        },
        {
            "source": "/(.*)\\.html",
            "headers": [{
                "key": "Cache-Control",
                "value": "no-cache, no-store, must-revalidate"
            }]
        },
        {
            "source": "/",
            "headers": [{
                "key": "Cache-Control",
                "value": "no-cache, no-store, must-revalidate"
            }]
        },
        {
            "source": "/(.*)",
            "headers": [{
                "key": "Cache-Control",
                "value": "no-cache, no-store, must-revalidate"
            }]
        },
        {
            "source": "/api/(.*)",
            "headers": [{
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "GET, POST, PUT, DELETE, OPTIONS"
                },
                {
                    "key": "Access-Control-Allow-Headers",
                    "value": "Content-Type"
                }
            ]
        }
    ],
    "rewrites": [
        { "source": "/api/generateCoverSheet", "destination": "/api/generateCoverSheet.js" },
        { "source": "/(.*)", "destination": "/index.html" }
    ]
}